<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="NexChat.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NexChat.Data"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="NexChat">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- NavBar -->
        <Grid Grid.Row="0" 
              Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
              Padding="20,10"
              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
              BorderThickness="0,0,0,1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Título -->
            <TextBlock Grid.Column="0"
                       Text="NexChat"
                       FontSize="24"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>

            <!-- Botón de Cloudflare -->
            <Button x:Name="CloudflareUpdateButton"
                    Grid.Column="1"
                    Click="CloudflareUpdateButton_Click"
                    Height="36"
                    VerticalAlignment="Center"
                    CornerRadius="6">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE896;" FontSize="14"/>
                    <TextBlock x:Name="CloudflareButtonText" Text="Cloudflare" FontSize="13"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Contenido principal -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Chat List -->
            <Grid Grid.Column="0" RowSpacing="10" Padding="10" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,1,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header with Create Chat Button -->
                <StackPanel Grid.Row="0" Orientation="Vertical" Spacing="10">
                    <Button x:Name="BtnCrearNuevoChat" 
                            Content="Crear Chat" 
                            HorizontalAlignment="Stretch"
                            Height="40" 
                            Click="BtnCrearNuevoChat_Click"
                            CornerRadius="8"/>
                    <Button x:Name="BtnUnirseNuevoChat" 
                            Content="Conectar a Chat" 
                            HorizontalAlignment="Stretch"
                            Height="40" 
                            Click="BtnUnirseNuevoChat_Click"
                            CornerRadius="8"/>
                    <TextBlock Text="Mis Chats" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Chat List - ListView with Selection -->
                <ListView x:Name="ChatListView" 
                          Grid.Row="1" 
                          ItemsSource="{x:Bind ChatItems}"
                          SelectionMode="Single"
                          SelectionChanged="ChatListView_SelectionChanged">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:Chat">
                            <Grid Padding="12" Background="Transparent" RightTapped="ChatItem_RightTapped">
                                <FlyoutBase.AttachedFlyout>
                                    <MenuFlyout Placement="Right" Opening="ChatContextMenu_Opening">
                                        <MenuFlyoutItem x:Name="PlayMenuItem"
                                                        Text="Play" 
                                                        Click="PlayChat_Click" 
                                                        Tag="{x:Bind Id}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE768;"/>
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem x:Name="StopMenuItem"
                                                        Text="Stop" 
                                                        Click="StopChat_Click" 
                                                        Tag="{x:Bind Id}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE71A;"/>
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutSeparator/>
                                        <MenuFlyoutItem Text="Editar" 
                                                        Click="EditChat_Click" 
                                                        Tag="{x:Bind Id}"/>
                                        <MenuFlyoutSeparator/>
                                        <MenuFlyoutItem Text="Eliminar" 
                                                        Click="DeleteChat_Click" 
                                                        Tag="{x:Bind Id}"
                                                        Foreground="PaleVioletRed"/>
                                    </MenuFlyout>
                                </FlyoutBase.AttachedFlyout>
                                <StackPanel Orientation="Vertical" Spacing="4">
                                    <TextBlock Text="{x:Bind Name}" FontSize="16" FontWeight="SemiBold"/>
                                    <TextBlock Text="{x:Bind CodeInvitation, Mode=OneWay}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondary}"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!-- Right Panel - Chat View -->
            <Grid x:Name="ChatViewPanel" Grid.Column="1" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Chat Header -->
                <Grid Grid.Row="0" 
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                      Padding="20,15"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                      BorderThickness="0,0,0,1">
                    <StackPanel Orientation="Vertical" Spacing="2">
                        <TextBlock x:Name="ChatHeaderName" 
                                   Text="Chat Name" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"/>
                        <TextBlock x:Name="ChatHeaderInfo" 
                                   Text="Code: XXX" 
                                   FontSize="12" 
                                   Foreground="{ThemeResource TextFillColorSecondary}"/>
                    </StackPanel>
                </Grid>

                <!-- Messages ScrollViewer -->
                <ScrollViewer x:Name="MessagesScrollViewer" 
                              Grid.Row="1" 
                              Padding="20"
                              VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="MessagesPanel" Spacing="8">
                        <!-- Messages will be added dynamically -->
                    </StackPanel>
                </ScrollViewer>

                <!-- Message Input Area -->
                <Grid Grid.Row="2" 
                      Padding="20,15"
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                      BorderThickness="0,1,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="MessageInputBox" 
                             Grid.Column="0"
                             PlaceholderText="Escribe un mensaje..."
                             VerticalAlignment="Center"
                             Height="40"
                             Margin="0,0,10,0"
                             KeyDown="MessageInputBox_KeyDown"
                             CornerRadius="20"/>

                    <Button x:Name="SendButton" 
                            Grid.Column="1"
                            Content="Enviar"
                            Click="SendButton_Click"
                            Height="40"
                            Width="100"
                            CornerRadius="20"
                            Style="{StaticResource AccentButtonStyle}"/>
                </Grid>
            </Grid>

            <!-- Empty State - No Chat Selected -->
            <Grid x:Name="EmptyChatPanel" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel Spacing="15" HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE8F2;" FontSize="72" Foreground="{ThemeResource TextFillColorSecondary}"/>
                    <TextBlock Text="Selecciona un chat para comenzar" 
                               FontSize="18" 
                               Foreground="{ThemeResource TextFillColorSecondary}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
