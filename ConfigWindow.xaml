<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="NexChat.ConfigWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NexChat"
    xmlns:data="using:NexChat.Data"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Configuración">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0" 
              Background="{ThemeResource LayerFillColorDefaultBrush}"
              Height="48"
              Padding="24,0">
            <TextBlock Text="Configuración"
                       FontSize="16"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Navigation Panel -->
            <Grid Grid.Column="0" 
                  Background="{ThemeResource LayerFillColorDefaultBrush}"
                  Padding="12,16">
                <StackPanel Spacing="4">
                    <TextBlock Text="AJUSTES" 
                               FontSize="12" 
                               FontWeight="SemiBold" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Margin="12,0,0,8"/>
                    
                    <Button x:Name="BtnIdentidad"
                            Click="BtnIdentidad_Click"
                            Style="{StaticResource NavigationButtonSelectedStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE77B;" FontSize="16"/>
                            <TextBlock Text="Identidad" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnApariencia"
                            Click="BtnApariencia_Click"
                            Style="{StaticResource NavigationButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE790;" FontSize="16"/>
                            <TextBlock Text="Apariencia" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnUsuariosCertificados"
                            Click="BtnUsuariosCertificados_Click"
                            Style="{StaticResource NavigationButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE716;" FontSize="16"/>
                            <TextBlock Text="Usuarios Certificados" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnCloudflare"
                            Click="BtnCloudflare_Click"
                            Style="{StaticResource NavigationButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE753;" FontSize="16"/>
                            <TextBlock Text="Cloudflare" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Right Content Panel -->
            <ScrollViewer Grid.Column="1" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalAlignment="Stretch">
                <Grid>
                    <!-- Identidad Content -->
                    <StackPanel x:Name="IdentidadContent" 
                                Visibility="Visible" 
                                Spacing="32"
                                HorizontalAlignment="Stretch"
                                Margin="32,24">
                        
                        <!-- Header Section -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Información de usuario" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="Gestiona tu perfil y configuración personal" 
                                       FontSize="14"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>

                        <!-- Username Change Card -->
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20">
                            <StackPanel Spacing="16">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="Nombre de usuario" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Modifica tu nombre visible en la aplicación" 
                                               FontSize="12"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                                
                                <StackPanel Spacing="12">
                                    <TextBox x:Name="TextBoxIdentidad" 
                                             PlaceholderText="Introduce tu nuevo nombre de usuario"
                                             TextChanged="TextBoxIdentidad_TextChanged"
                                             MaxLength="32"/>
                                    
                                    <Button x:Name="BtnConfirmarNewIdentidad"
                                            Click="BtnConfirmarNewIdentidad_Click"
                                            Visibility="Collapsed"
                                            Style="{StaticResource AccentButtonStyle}"
                                            HorizontalAlignment="Right"
                                            Padding="24,8">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE74E;" FontSize="14"/>
                                            <TextBlock Text="Guardar cambios"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Public ID Card -->
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20">
                            <StackPanel Spacing="12">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="ID Público" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Este identificador permite que otros usuarios verifiquen tu identidad de forma segura" 
                                               FontSize="12"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                                
                                <Grid ColumnSpacing="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBox x:Name="TextBoxPublicId" 
                                             Grid.Column="0"
                                             IsReadOnly="True"
                                             FontFamily="Consolas"
                                             FontSize="14"
                                             IsTabStop="False"
                                             VerticalAlignment="Center"
                                             VerticalContentAlignment="Center"/>
                                    
                                    <Button x:Name="BtnCopyPublicId"
                                            Grid.Column="1"
                                            Click="BtnCopyPublicId_Click"
                                            Width="36"
                                            Height="36"
                                            Padding="0"
                                            VerticalAlignment="Center"
                                            ToolTipService.ToolTip="Copiar al portapapeles">
                                        <FontIcon Glyph="&#xE8C8;" 
                                                  FontSize="16"/>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- User ID Card (Private - moved to bottom) -->
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20">
                            <StackPanel Spacing="12">
                                <StackPanel Spacing="4">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="ID de Usuario Privado" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold"/>
                                        <Border Background="{ThemeResource SystemFillColorCriticalBrush}"
                                                CornerRadius="4"
                                                Padding="8,2"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="CONFIDENCIAL" 
                                                       FontSize="10"
                                                       FontWeight="SemiBold"
                                                       Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="⚠️ NO COMPARTAS ESTE ID CON NADIE" 
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                                    <TextBlock Text="Este es tu identificador único y privado. Si alguien más lo conoce, podría suplantar tu identidad." 
                                               FontSize="12"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                                
                                <Grid ColumnSpacing="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <PasswordBox x:Name="PasswordBoxGuildUsuario" 
                                                 Grid.Column="0"
                                                 Password="XXXXXXXXXX"
                                                 FontFamily="Consolas"
                                                 FontSize="14"
                                                 IsTabStop="False"
                                                 IsEnabled="False"
                                                 PasswordRevealMode="Hidden"
                                                 VerticalAlignment="Center"
                                                 VerticalContentAlignment="Center"/>
                                    
                                    <Button x:Name="BtnTogglePasswordVisibility"
                                            Grid.Column="1"
                                            Click="BtnTogglePasswordVisibility_Click"
                                            Width="36"
                                            Height="36"
                                            Padding="0"
                                            VerticalAlignment="Center"
                                            ToolTipService.ToolTip="Mostrar/Ocultar ID">
                                        <FontIcon x:Name="IconEye" 
                                                  Glyph="&#xED1A;" 
                                                  FontSize="16"/>
                                    </Button>
                                    
                                    <Button x:Name="BtnCopyUserId"
                                            Grid.Column="2"
                                            Click="BtnCopyUserId_Click"
                                            Width="36"
                                            Height="36"
                                            Padding="0"
                                            VerticalAlignment="Center"
                                            ToolTipService.ToolTip="Copiar al portapapeles">
                                        <FontIcon Glyph="&#xE8C8;" 
                                                  FontSize="16"/>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Border>

                    </StackPanel>

                    <!-- Apariencia Content -->
                    <StackPanel x:Name="AparienciaContent" 
                                Visibility="Collapsed" 
                                Spacing="32"
                                HorizontalAlignment="Stretch"
                                Margin="32,24">
                        
                        <!-- Header Section -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Apariencia" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="Personaliza el aspecto visual de la aplicación" 
                                       FontSize="14"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>

                        <!-- Theme Selection Card -->
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20">
                            <StackPanel Spacing="16">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="Tema de la aplicación" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Selecciona el esquema de colores para la aplicación" 
                                               FontSize="12"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                                
                                <ComboBox x:Name="ComboBoxTema" 
                                          SelectionChanged="ComboBoxTema_SelectionChanged"
                                          HorizontalAlignment="Stretch"
                                          PlaceholderText="Selecciona un tema"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>

                    <!-- Usuarios Certificados Content -->
                    <StackPanel x:Name="UsuariosCertificadosContent" 
                                Visibility="Collapsed" 
                                Spacing="32"
                                HorizontalAlignment="Stretch"
                                Margin="32,24">
                        
                        <!-- Header Section -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Usuarios Certificados" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="Gestiona los usuarios de confianza con sus códigos de acceso" 
                                       FontSize="14"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>

                        <!-- Add New User Card -->
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20">
                            <StackPanel Spacing="16">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="Agregar nuevo usuario certificado" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Introduce el nombre y la llave del usuario de confianza" 
                                               FontSize="12"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                                
                                <Grid ColumnSpacing="12" RowSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBox x:Name="TextBoxNuevoNombre" 
                                             Grid.Column="0"
                                             PlaceholderText="Nombre del usuario"
                                             MaxLength="50"/>
                                    
                                    <TextBox x:Name="TextBoxNuevaLlave" 
                                             Grid.Column="1"
                                             PlaceholderText="Llave de acceso"
                                             MaxLength="100"/>
                                    
                                    <Button x:Name="BtnAgregarUsuario"
                                            Grid.Column="2"
                                            Click="BtnAgregarUsuario_Click"
                                            Style="{StaticResource AccentButtonStyle}"
                                            VerticalAlignment="Stretch"
                                            Padding="24,0">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE710;" FontSize="14"/>
                                            <TextBlock Text="Agregar"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Users List Card -->
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20">
                            <StackPanel Spacing="16">
                                <TextBlock Text="Lista de usuarios certificados" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"/>
                                
                                <!-- Empty State -->
                                <StackPanel x:Name="EmptyUsersState"
                                            Visibility="Visible"
                                            Spacing="12"
                                            HorizontalAlignment="Center"
                                            Padding="40">
                                    <FontIcon Glyph="&#xE716;" 
                                              FontSize="48"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock Text="No hay usuarios certificados"
                                               FontSize="14"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Agrega usuarios de confianza para gestionar sus accesos"
                                               FontSize="12"
                                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                               HorizontalAlignment="Center"
                                               TextWrapping="Wrap"
                                               MaxWidth="300"/>
                                </StackPanel>

                                <!-- Users ListView -->
                                <ListView x:Name="CertifiedUsersListView"
                                          Visibility="Collapsed"
                                          SelectionMode="None"
                                          ItemsSource="{x:Bind CertifiedUsers, Mode=OneWay}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="data:CertifiedUser">
                                            <Grid Padding="12"
                                                  ColumnSpacing="16"
                                                  Background="{ThemeResource LayerFillColorDefaultBrush}"
                                                  CornerRadius="8"
                                                  Margin="0,4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Icon -->
                                                <Border Grid.Column="0"
                                                        Width="40"
                                                        Height="40"
                                                        CornerRadius="20"
                                                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                                                        VerticalAlignment="Center">
                                                    <FontIcon Glyph="&#xE77B;" 
                                                              FontSize="20"
                                                              Foreground="White"/>
                                                </Border>

                                                <!-- Info -->
                                                <StackPanel Grid.Column="1"
                                                            VerticalAlignment="Center"
                                                            Spacing="4">
                                                    <TextBlock Text="{x:Bind Nombre}"
                                                               FontSize="14"
                                                               FontWeight="SemiBold"/>
                                                    <TextBlock Text="{x:Bind Llave}"
                                                               FontSize="12"
                                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                               FontFamily="Consolas"/>
                                                </StackPanel>

                                                <!-- Actions -->
                                                <StackPanel Grid.Column="2"
                                                            Orientation="Horizontal"
                                                            Spacing="8"
                                                            VerticalAlignment="Center">
                                                    <Button Click="BtnEditarUsuario_Click"
                                                            Tag="{x:Bind Id}"
                                                            Width="36"
                                                            Height="36"
                                                            Padding="0"
                                                            ToolTipService.ToolTip="Editar">
                                                        <FontIcon Glyph="&#xE70F;" FontSize="14"/>
                                                    </Button>
                                                    
                                                    <Button Click="BtnEliminarUsuario_Click"
                                                            Tag="{x:Bind Id}"
                                                            Width="36"
                                                            Height="36"
                                                            Padding="0"
                                                            ToolTipService.ToolTip="Eliminar">
                                                        <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </Border>

                    </StackPanel>

                    <!-- Cloudflare Content -->
                    <StackPanel x:Name="CloudflareContent" 
                                Visibility="Collapsed" 
                                Spacing="32"
                                HorizontalAlignment="Stretch"
                                Margin="32,24">
                        
                        <!-- Header Section -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Cloudflare Service" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="Gestiona el servicio de túnel de Cloudflare para conexiones P2P" 
                                       FontSize="14"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>

                        <!-- Status Card -->
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20">
                            <StackPanel Spacing="16">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="Estado del servicio" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Información sobre la instalación de Cloudflare" 
                                               FontSize="12"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                                
                                <!-- Status Indicator -->
                                <Grid ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border x:Name="CloudflareStatusIcon"
                                            Grid.Column="0"
                                            Width="48"
                                            Height="48"
                                            CornerRadius="24"
                                            Background="{ThemeResource SystemFillColorSuccessBrush}"
                                            VerticalAlignment="Center">
                                        <FontIcon x:Name="CloudflareStatusIconGlyph"
                                                  Glyph="&#xE73E;" 
                                                  FontSize="24"
                                                  Foreground="White"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" 
                                                VerticalAlignment="Center"
                                                Spacing="4">
                                        <TextBlock x:Name="CloudflareStatusText"
                                                   Text="Cloudflare instalado"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock x:Name="CloudflareStatusDescription"
                                                   Text="El servicio está listo para usar"
                                                   FontSize="12"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Executable Info Card -->
                        <Border x:Name="CloudflareInfoCard"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20"
                                Visibility="Collapsed">
                            <StackPanel Spacing="16">
                                <TextBlock Text="Información del ejecutable" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"/>
                                
                                <Grid RowSpacing="12">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Version -->
                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               Text="Versión:"
                                               FontSize="13"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock x:Name="CloudflareVersion"
                                               Grid.Row="0" Grid.Column="1"
                                               Text="Cargando..."
                                               FontSize="13"
                                               FontFamily="Consolas"/>

                                    <!-- File Size -->
                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                               Text="Tamaño:"
                                               FontSize="13"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock x:Name="CloudflareFileSize"
                                               Grid.Row="1" Grid.Column="1"
                                               Text="Cargando..."
                                               FontSize="13"
                                               FontFamily="Consolas"/>

                                    <!-- Last Modified -->
                                    <TextBlock Grid.Row="2" Grid.Column="0"
                                               Text="Última modificación:"
                                               FontSize="13"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock x:Name="CloudflareLastModified"
                                               Grid.Row="2" Grid.Column="1"
                                               Text="Cargando..."
                                               FontSize="13"
                                               FontFamily="Consolas"/>

                                    <!-- Hash -->
                                    <TextBlock Grid.Row="3" Grid.Column="0"
                                               Text="Hash SHA256:"
                                               FontSize="13"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock x:Name="CloudflareHash"
                                               Grid.Row="3" Grid.Column="1"
                                               Text="Cargando..."
                                               FontSize="11"
                                               FontFamily="Consolas"
                                               TextWrapping="Wrap"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Actions Card -->
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20">
                            <StackPanel Spacing="16">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="Acciones" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Gestiona la instalación de Cloudflare Service" 
                                               FontSize="12"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                                
                                <StackPanel Spacing="12">
                                    <!-- Install/Update Button -->
                                    <Button x:Name="BtnInstallCloudflare"
                                            Click="BtnInstallCloudflare_Click"
                                            Style="{StaticResource AccentButtonStyle}"
                                            HorizontalAlignment="Stretch"
                                            Padding="16,12">
                                        <StackPanel Orientation="Horizontal" Spacing="12">
                                            <FontIcon x:Name="InstallButtonIcon" 
                                                      Glyph="&#xE896;" 
                                                      FontSize="16"/>
                                            <TextBlock x:Name="InstallButtonText" 
                                                       Text="Instalar Cloudflare"
                                                       FontSize="14"/>
                                        </StackPanel>
                                    </Button>

                                    <!-- Uninstall Button -->
                                    <Button x:Name="BtnUninstallCloudflare"
                                            Click="BtnUninstallCloudflare_Click"
                                            HorizontalAlignment="Stretch"
                                            Padding="16,12"
                                            Visibility="Collapsed">
                                        <StackPanel Orientation="Horizontal" Spacing="12">
                                            <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                                            <TextBlock Text="Desinstalar Cloudflare" FontSize="14"/>
                                        </StackPanel>
                                    </Button>

                                    <!-- Check Update Button -->
                                    <Button x:Name="BtnCheckUpdateCloudflare"
                                            Click="BtnCheckUpdateCloudflare_Click"
                                            HorizontalAlignment="Stretch"
                                            Padding="16,12"
                                            Visibility="Collapsed">
                                        <StackPanel Orientation="Horizontal" Spacing="12">
                                            <FontIcon Glyph="&#xE895;" FontSize="16"/>
                                            <TextBlock Text="Verificar actualizaciones" FontSize="14"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>