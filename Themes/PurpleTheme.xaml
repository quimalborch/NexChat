<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Purple Theme Color Palette -->
    
    <!-- Accent Colors -->
    <Color x:Key="SystemAccentColor">#8E24AA</Color>
    <Color x:Key="SystemAccentColorLight1">#AB47BC</Color>
    <Color x:Key="SystemAccentColorLight2">#BA68C8</Color>
    <Color x:Key="SystemAccentColorLight3">#CE93D8</Color>
    <Color x:Key="SystemAccentColorDark1">#7B1FA2</Color>
    <Color x:Key="SystemAccentColorDark2">#6A1B9A</Color>
    <Color x:Key="SystemAccentColorDark3">#4A148C</Color>

    <!-- Accent Brushes -->
    <SolidColorBrush x:Key="AccentFillColorDefaultBrush" Color="#8E24AA"/>
    <SolidColorBrush x:Key="AccentFillColorSecondaryBrush" Color="#8E24AA33"/>
    <SolidColorBrush x:Key="AccentFillColorTertiaryBrush" Color="#8E24AA24"/>
    <SolidColorBrush x:Key="AccentFillColorDisabledBrush" Color="#8E24AA59"/>
    <SolidColorBrush x:Key="AccentFillColorSelectedTextBackgroundBrush" Color="#8E24AA"/>

    <!-- Accent Text -->
    <SolidColorBrush x:Key="AccentTextFillColorPrimaryBrush" Color="#AB47BC"/>
    <SolidColorBrush x:Key="AccentTextFillColorSecondaryBrush" Color="#8E24AA"/>
    <SolidColorBrush x:Key="AccentTextFillColorTertiaryBrush" Color="#7B1FA2"/>
    <SolidColorBrush x:Key="AccentTextFillColorDisabledBrush" Color="#8E24AA59"/>

    <!-- System Fills -->
    <SolidColorBrush x:Key="SystemFillColorAttentionBrush" Color="#8E24AA14"/>
    <SolidColorBrush x:Key="SystemFillColorSuccessBrush" Color="#10B98114"/>
    <SolidColorBrush x:Key="SystemFillColorCautionBrush" Color="#F59E0B14"/>
    <SolidColorBrush x:Key="SystemFillColorCriticalBrush" Color="#DC262614"/>
    <SolidColorBrush x:Key="SystemFillColorNeutralBrush" Color="#FFFFFF0F"/>

    <!-- Additional Purple Theme Variations -->
    <SolidColorBrush x:Key="SubtleFillColorSecondaryBrush" Color="#8E24AA1A"/>
    <SolidColorBrush x:Key="ControlStrokeColorOnAccentDefaultBrush" Color="#FFFFFF1F"/>
    <SolidColorBrush x:Key="ControlStrokeColorOnAccentSecondaryBrush" Color="#FFFFFF29"/>
    <SolidColorBrush x:Key="ControlStrokeColorOnAccentTertiaryBrush" Color="#FFFFFF0F"/>
    <SolidColorBrush x:Key="ControlStrokeColorOnAccentDisabledBrush" Color="#FFFFFF14"/>

</ResourceDictionary>
