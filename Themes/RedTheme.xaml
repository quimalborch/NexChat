<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Red Theme Color Palette -->
    
    <!-- Accent Colors -->
    <Color x:Key="SystemAccentColor">#E53935</Color>
    <Color x:Key="SystemAccentColorLight1">#EF5350</Color>
    <Color x:Key="SystemAccentColorLight2">#EF5350</Color>
    <Color x:Key="SystemAccentColorLight3">#FFCDD2</Color>
    <Color x:Key="SystemAccentColorDark1">#C62828</Color>
    <Color x:Key="SystemAccentColorDark2">#B71C1C</Color>
    <Color x:Key="SystemAccentColorDark3">#8B0000</Color>

    <!-- Accent Brushes -->
    <SolidColorBrush x:Key="AccentFillColorDefaultBrush" Color="#E53935"/>
    <SolidColorBrush x:Key="AccentFillColorSecondaryBrush" Color="#E5393533"/>
    <SolidColorBrush x:Key="AccentFillColorTertiaryBrush" Color="#E5393524"/>
    <SolidColorBrush x:Key="AccentFillColorDisabledBrush" Color="#E5393559"/>
    <SolidColorBrush x:Key="AccentFillColorSelectedTextBackgroundBrush" Color="#E53935"/>

    <!-- Accent Text -->
    <SolidColorBrush x:Key="AccentTextFillColorPrimaryBrush" Color="#EF5350"/>
    <SolidColorBrush x:Key="AccentTextFillColorSecondaryBrush" Color="#E53935"/>
    <SolidColorBrush x:Key="AccentTextFillColorTertiaryBrush" Color="#C62828"/>
    <SolidColorBrush x:Key="AccentTextFillColorDisabledBrush" Color="#E5393559"/>

    <!-- System Fills -->
    <SolidColorBrush x:Key="SystemFillColorAttentionBrush" Color="#E5393514"/>
    <SolidColorBrush x:Key="SystemFillColorSuccessBrush" Color="#10B98114"/>
    <SolidColorBrush x:Key="SystemFillColorCautionBrush" Color="#F59E0B14"/>
    <SolidColorBrush x:Key="SystemFillColorCriticalBrush" Color="#E5393514"/>
    <SolidColorBrush x:Key="SystemFillColorNeutralBrush" Color="#FFFFFF0F"/>

    <!-- Additional Red Theme Variations -->
    <SolidColorBrush x:Key="SubtleFillColorSecondaryBrush" Color="#E539351A"/>
    <SolidColorBrush x:Key="ControlStrokeColorOnAccentDefaultBrush" Color="#FFFFFF1F"/>
    <SolidColorBrush x:Key="ControlStrokeColorOnAccentSecondaryBrush" Color="#FFFFFF29"/>
    <SolidColorBrush x:Key="ControlStrokeColorOnAccentTertiaryBrush" Color="#FFFFFF0F"/>
    <SolidColorBrush x:Key="ControlStrokeColorOnAccentDisabledBrush" Color="#FFFFFF14"/>

</ResourceDictionary>
